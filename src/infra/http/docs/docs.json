{
  "openapi": "3.0.0",
  "info": {
    "title": "Nuvem Connect - API",
    "description": "API for account management",
    "version": "0.1.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "Development server"
    }
  ],
  "paths": {
    "/account": {
      "post": {
        "summary": "Create a new account",
        "tags": ["Account"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$"
                  },
                  "passwordConfirmation": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": [
                  "name",
                  "email",
                  "password",
                  "passwordConfirmation"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Account created successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "uuid": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "422": {
            "$ref": "#/components/responses/UnprocessableEntity"
          }
        }
      }
    },
    "/account/login": {
      "post": {
        "summary": "Login to an existing account",
        "tags": ["Account"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["email", "password"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "token": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "422": {
            "description": "Unprocessable Entity",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/UnprocessableEntity"
            },
            "examples": {
              "generalError": {
                "$ref": "#/components/examples/generalError"
              },
              "invalidEmailOrPassword": {
                "$ref": "#/components/examples/invalidEmailOrPassword"
              }
            }
          }
        }
          }
        }
      }
    },
    "/account/request-password-reset": {
      "post": {
        "summary": "request password reset",
        "tags": ["Account"],
        "description": "Sends a code required to reset the password.  \nIf a second request is made with the same email before the token expires, the code will be resent.  \nHowever, you must wait 1 minute before requesting a new code, and it is not possible to resend the code more than once.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "format": "email"
                  }
                },
                "required": ["email"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "successful password reset request",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "tokenUUID": {
                      "type": "string",
                      "format": "uuid"
                    },
                    "token": {
                      "type": "string",
                      "pattern": "^([a-zA-Z])[a-zA-Z0-9]{6}$"
                    } 
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "generalError": {
                    "$ref": "#/components/examples/generalError"
                  },
                  "ResendTokenError": {
                    "$ref": "#/components/examples/ResendTokenError"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/account/reset-password": {
      "put": {
        "summary": "Password reset",
        "tags": ["Account"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "tokenUUID": {
                    "type": "string",
                    "format": "uuid"
                  },
                  "token": {
                    "type": "string",
                    "pattern": "^(?=.*[a-zA-Z])[a-zA-Z0-9]{6}$"
                  },
                  "email": {
                    "type": "string",
                    "format": "email"
                  },
                  "password": {
                    "type": "string",
                    "minLength": 8,
                    "pattern": "^(?=.*[a-z])(?=.*[A-Z])(?=.*\\d)(?=.*[!@#$%^&*])[A-Za-z\\d!@#$%^&*]{8,}$"
                  },
                  "passwordConfirmation": {
                    "type": "string",
                    "minLength": 8
                  }
                },
                "required": ["tokenUUID", "token", "email", "password", "passwordConfirmation"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Password updated successfully"
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "422": {
            "description": "Unprocessable Entity",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    }
                  }
                },
                "examples": {
                  "generalError": {
                    "$ref": "#/components/examples/generalError"
                  },
                  "passwordMismatch": {
                    "$ref": "#/components/examples/passwordMismatch"
                  },
                  "invalidPassword": {
                    "$ref": "#/components/examples/passwordMismatch"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/account/google/login": {
      "post": {
        "summary": "Google OAuth Login",
        "description": "Redirects the user to Google's login page to grant permission for email and profile access.",
        "tags": ["Account"],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema":{
                "type": "object",
                "properties": {
                  "idToken": {
                    "type": "string"
                  }
                },
                "required": ["idToken"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "access token da api",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "accessToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/google-drive/auth": {
      "post": {
        "summary": "Google OAuth",
        "description": "add uma conta da nuvem do google-drive",
        "security": [
          {
            "Bearer": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "code": {
                    "description": "authorization code",
                    "type": "string"
                  }
                },
                "required": ["code"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cloud account added successfully."
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "description": "Internal server error occurred while processing the login or creating a new account.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "An error occurred while processing the request."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/google-drive/list-files": {
      "get": {
        "summary": "Google OAuth",
        "description": "add uma conta da nuvem do google-drive",
        "security": [
          {
            "Bearer": []
          }
        ],
        "parameters": [
          {
            "in": "query",
            "name": "pageSize",
            "schema":{
              "type": "string"
            },
            "required": false
          },
          {
            "in": "query",
            "name": "orderBy",
            "schema":{
              "type": "number"
            },
            "required": false
          },
          {
            "in": "query",
            "name": "nextPageToken",
            "schema":{
              "type": "string"
            },
            "required": false
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "emailCloudAccount": {
                    "description": "authorization code",
                    "type": "string"
                  },
                  "provider": {
                    "description": "provider of cloud",
                    "type": "string",
                    "example": "google-drive"
                  }
                },
                "required": ["emailCloudAccount", "provider"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Cloud account added successfully.",
            "content": {
              "application/json": {
                "schema":{
                  "type": "object",
                  "properties": {
                    "files":{
                      "type": "array",
                      "items" :{
                        "type": "object",
                        "properties": {
                          "id": {
                            "type": "string"
                          },
                          "name": {
                            "type": "string"
                          },
                          "mimeType": {
                            "type": "string"
                          }
                        }
                      }
                    },
                    "nextPageToken": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BadRequest"
          },
          "404": {
            "$ref": "#/components/responses/NotFound"
          },
          "500": {
            "description": "Internal server error occurred while processing the login or creating a new account.",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "An error occurred while processing the request."
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "responses": {
      "BadRequest": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "errors": {
                  "type": "object",
                  "additionalProperties": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              }
            },
            "examples": {
              "missingField": {
                "value": {
                  "message": "string",
                  "errors": {
                    "field": ["required"]
                  }
                }
              }
            }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Unprocessable Entity",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "NotFound": {
        "description": "the resource could not be found",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              }
            },
            "examples": {
              "generalError": {
                "value": {
                  "message": "string"
                }
              },
              "NotFoundPasswordResetToken": {
                "description": "password reset token could not be found",
                "value": {
                  "message": "Password reset token not found"
                }
              }
            }
          }
        }
      }
    },
    "examples": {
      "generalError": {
        "value": {
          "message": "string"
        }
      },
      "invalidPassword": {
        "value": {
          "message": "Password does not meet the required criteria"
        }
      },
      "accountExists": {
        "value": {
          "message": "Account already exists"
        }
      },
      "passwordMismatch": {
        "value": {
          "message": "Password confirmation different from password"
        }
      },
      "invalidEmailOrPassword":{
        "value": {
          "message": "Invalid email or password"
        }
      },
      "ResendTokenError":{
       "description": "Occurs when you attempt to resend the token to the same email before the required wait time has passed.",
        "value": {
          "message": "Wait before requesting a new code."
        }
      }
    },
    "schemas": {
      "UnprocessableEntity": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer": {
        "type": "http",
        "description": "bearer {token}",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
